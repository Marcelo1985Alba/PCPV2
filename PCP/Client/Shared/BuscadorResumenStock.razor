    </div>
    <div class="col-2">
        <DxButton Text="..." RenderStyle="@ButtonRenderStyle.Danger"
                  Visible="@MostraBotonBusqueda"
                  Enabled="@HabilitaBotonBusqueda" Click="@(async (e)=> await BuscarStock())"
                  RenderStyleMode="@ButtonRenderStyleMode.Outline" />
    </div>

