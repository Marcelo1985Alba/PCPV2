@inherits ModalExigeSerieLoteDespachoBase

<DxPopup HeaderText="DEFINICION DEL DESPACHO" HeaderCssClass="bg-primary text-white w-100"
         @bind-Visible="@PopupVisible">
    <Content>
        <EditForm Model="@Modelo" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <div class="row">
                <div class="col-12">
                    <label for="despacho">IDENTIFICACION DEL DESPACHO DEL PROVEEDOR</label>
                    <DxTextBox Id="despacho" @bind-Text="@Modelo.DESPACHO" />
                </div>
                <div class="col-12">
                    <label for="serie">IDENTIFICACION DEL N DE SERIE DEL PROVEEDOR</label>
                    <DxTextBox Id="serie" @bind-Text="@Modelo.SERIE" />
                </div>
                <div class="col-12">
                    <label for="lote">IDENTIFICACION DEL LOTE DEL PROVEEDOR</label>
                    <DxTextBox Id="lote" @bind-Text="@Modelo.LOTE" />
                    @*<ValidationMessage For="@(()=> ItemStock.LOTE)" />*@
                </div>
            </div>

        </EditForm>
        @*<EditForm Model="@Modelo" Context="EditFormContext" OnValidSubmit="@HandleValidSubmit">
