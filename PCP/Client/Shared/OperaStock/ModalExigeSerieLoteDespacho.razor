                        </Template>
                    </DxFormLayoutItem>
                 </DxFormLayout>
            </EditForm>*@
        <div>
            @ModeloSerialize
        </div>
    </Content>
    <FooterTemplate>
        <DxButton RenderStyle="ButtonRenderStyle.Secondary" Click="@(async(e)=>  await SerializarModelo())"
                  Text="Serialize"/>
        <DxButton RenderStyle="ButtonRenderStyle.Primary" SubmitFormOnClick="true"
                  Text="OK" />
    </FooterTemplate>
</DxPopup>

